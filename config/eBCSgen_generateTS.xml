<tool id="TransitionSystemGenerator" name="Transition System generator" version="1.0.0">
  <description>- generate transition system of the given model</description>
  <command>python3 /home/xtrojak/eBCSgen/Callables/GenerateTS.py
      --model '$model'
      --output '$output'
      --bound '$bound'
      --transition_file '$adv.transition_file'
      --max_time '$adv.max_time'
      --max_size '$adv.max_size'

      '$input_model' '$output' '$bounds'</command>

  <inputs>
    <param format="bcs" name="$model" type="data" label="Model file" help="Provide a .bcs file"/>
    <param name="bounds" size="4" type="integer" value="" label="Bound [optional]" optional="true"/>
      <section name="adv" title="Advanced Options" expanded="false">
          <param name="max_time" size="4" type="float" value="" label="Maximal computation time [optional]" optional="true"/>
          <param name="max_size" size="4" type="float" value="" label="Maximal TS size [optional]" optional="true"/>
          <param name="transition_file" type="data" label="Precomputed TS file [optional]" optional="true"/>
      </section>
  </inputs>

  <outputs>
    <data format="bcs.ts" name="output" />
  </outputs>

  <tests>
    <test>
    </test>
  </tests>

</tool>
